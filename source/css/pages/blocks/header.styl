/* ==========================================================================
   -- Header
   ========================================================================== */

header_padding = 3vw
font-size = 1.6vw
letter-spacing = .1vw

body
	#app
		height 100%
		
		.template
			box-sizing()
			min-height 100%
			padding-bottom 10vh
			
			section
				box-sizing()
				padding-top 10vh
				
				h2
					text-align center
					margin-bottom 2vh
				
				p
					font-size 1.6vw
					text-align center

header.root
	background-color blue
	z-index 2

	.content
		height 10.2vw

		nav.root
			box-sizing()
			padding-left header_padding
			float left

			ul
				li
					a
						font-size font-size
						line-height @height
						color white
						padding 0 (header_padding/2)vw
						letter-spacing -(letter-spacing)
						
		#language_select
			width 10vw
			height @height
			background-color medium_blue
			float right
			cursor pointer
			
			.top
				margin-top 2vw
				margin-bottom 1vw
				width 100%
				float left

				i
					border-radius(100%)
					display block
					margin auto
					width 2.4vw
					height 2.4vw
					background-color light_blue
					
			.bottom
				width 100%
				float left

				span
					width 100%
					color white
					text-align center
					text-transform uppercase
					font-size (font-size - .4vw)
					line-height font-size
					letter-spacing -(letter-spacing)
					
			.line
				width 100%
				height .4vw
				background-color light_blue
				position absolute
				bottom 0
				left 0
				
#language_option
	transitions(top .25s)
	height 4vw
	width 100%
	background-color medium_blue
	position absolute
	top (10.2vw - 4vw)
	left 0
	z-index 1

	ul
		height @height
		
		li
			width 33.33%
			
			a
				width 100%
				line-height @height
				color white
				text-align center
				cursor pointer
				
#language_option.active
	top 10.2vw